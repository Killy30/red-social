<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=user.nombre%></title>
    <link rel="stylesheet" href="../css/mi_perfil.css">
    <link rel="stylesheet" href="../css/view_img.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">
    <link href="../lightbox2-master//dist/css/lightbox.min.css" rel="stylesheet" />
</head>
<body>
    <%-include('header')%>

    <div class="view_img" id="view_img" style="display: none"></div>
    
    <div id="off" class="content">
        <div class="cabecera">
            <div class="portada"></div>
            <div class="foto">
                <%if(!user.userFoto){%>
                    <img class="imgPerfil" src="../userIcon.jpg" >
                <%}%>
                <img class="imgPerfil" src="<%=user.userFoto%>" alt="">
            </div>
            <div class="name">
                <h1 class="h2"><%=user.nombre%></h1>
                <p class=""><%=user.email%></p>
                <a href="/cambiar_foto_perfil">Editar perfil</a>
            </div>
        
        </div>

        <div class="more">
            <div class="nav_p">
                <a href="/guardados"><i class="material-icons">bookmark</i>Guardados</a>
            </div>
            <div class="nav_p">
                <a href="/message"><i class="material-icons md-48"> mail</i> Mensajeria</a>
            </div>
            <div class="nav_p">
                <a  href="/config"><i class="material-icons">brightness_high</i> Configuraciones</a>
            </div>
            <div class="nav_p">
                <a class="a_cam" href="/cambiar_foto_perfil"><i class="material-icons">add_a_photo</i> Editar foto de perfil</a>
            </div>
        </div>
        
        <div class="info">
            <div class="in">
                <h3 class="">Informacion Personal</h3>
                <a class="edi" href="/config">Editar</a>
            </div>
            <div class="datos">
                <%if(user.estudio){%>
                    <div class="gh">
                        <p><strong>Estudios o Carera:</strong> <%=user.estudio%></p>
                    </div>
                <%}%>
                <%if(user.pais){%>
                    <div class="gh">
                        <p><strong>Pais:</strong> <%=user.pais%></p>
                    </div>
                <%}%>
                <%if(user.cuidad){%>
                    <div class="gh">
                        <p><strong>Cuidad:</strong> <%=user.cuidad%></p>
                    </div>
                <%}%>
                <%if(user.dia && user.mes && user.ano){%>
                    <div class="gh">
                        <p><strong>Fecha de nacimiento:</strong> <%=user.dia%></p><p><%=user.mes%></p><p><%=user.ano%></p>
                    </div>
                <%}%>
            </div>
        </div>
   
        <div class="publicaciones">
            <div class="head_">
                <p><i class="material-icons">collections</i> Posts</p>
                <a href="/guardados"><i class="material-icons">bookmark</i> Guardados</a>
            </div>
            <div class="box postSave"></div>
        </div>
    </div>

    <script src="../js/view_img.js"></script>
    <script src="../js/my_profile.js"></script>
    <script src="../lightbox2-master/dist/js/lightbox-plus-jquery.min.js"></script>
</body>
</html>