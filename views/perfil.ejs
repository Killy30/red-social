<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=user.nombre%></title>
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/mi_perfil.css">
    <link rel="stylesheet" href="../css/view_img.css">
</head>
<body>

    
    <header>
        <a href="/inicio" class="p">
            <div class="h1">
                <img src="../img/logop.png" alt="">
            </div>
        </a>
        <nav>
            <ul>
                <li class="li"> <a class="la" href="/inicio">Inicio</a></li>
                <li class="li"> <a class="la" href="/my_perfil">Perfil</a></li>
                <li lass="li"><a class="la" href="/message">Message</a></li>
                <li lass="li"><a class="la" href="/logout">Salir</a></li>
            </ul>
    
        </nav>
    </header>
    
    <div class="view_img" id="view_img" style="display: none"></div>

    <div id="off" class="content">
        <div class="cabecera">
            <div class="portada"></div>
            <div class="foto">
                <%if(!user.userFoto){%>
                    <img class="imgPerfil" src="../userIcon.jpg" >
                <%}%>
                <img class="imgPerfil" src="<%=user.userFoto%>" alt="">
            </div>
            <div class="name">
                <h2 class="h2"><%=user.nombre%></h2>
                <h3 class=""><%=user.email%></h3>
            </div>
        </div>
        
        <div class="info">
            <h3 class="">Informacion Personal</h3>
            <div class="datos">
                <%if(user.estudio){%>
                    <div class="gh">
                        <p><strong>Estudios o Carera:</strong> <%=user.estudio%></p>
                    </div>
                <%}%>
                <%if(user.pais){%>
                    <div class="gh">
                        <p><strong>Pais:</strong> <%=user.pais%></p>
                    </div>
                <%}%>
                <%if(user.cuidad){%>
                    <div class="gh">
                        <p><strong>Cuidad:</strong> <%=user.cuidad%></p>
                    </div>
                <%}%>
                <%if(user.dia && user.mes && user.ano){%>
                    <div class="gh">
                        <p><strong>Fecha de nacimiento:</strong> <%=user.dia%></p><p><%=user.mes%></p><p><%=user.ano%></p>
                    </div>
                <%}%>
            </div>
        </div>

        <div class="publicaciones">
            <h3>Posts</h3>
            <div class="box postSave">
                <%for(var c = user.posts.length-1; c >=0; c--){%>
                    <%if(!user.posts[c].descripcion) {%>
                        <div class="box_publicacion">
                            <div class="box_img">
                                <%if(user.posts[c].fotoPost.split('.',2)[1] === "mp4"){%>
                                    <video controls class="imgPost" src="<%=user.posts[c].fotoPost%>"</video>
                                <%}%>
                                <img class="imgPost view" data-img_="<%=user.posts[c].fotoPost%>" src="<%=user.posts[c].fotoPost%>" alt="">
                            </div>
                        </div>
                    <%}%>
                <%}%>    
            </div>
        </div>
    </div>

    <script src="../js/view_img.js"></script>
</body>
</html>