<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=users.nombre%></title>
    <link rel="stylesheet" href="../css/profile.css">
    <link rel="stylesheet" href="../css/view_img.css">
    <!-- <link href="../lightbox2-master//dist/css/lightbox.min.css" rel="stylesheet" /> -->
</head>
<body>

    <%-include('./header')%>
    
    <div class="view_img" data-my_id="<%=user.id%>" data-verify="xhan" id="view_img" style="display: none"></div>

    <div id="off" class="content">
        <div class="cabecera">
            <div class="foto">
                <%if(!users.userFoto){%>
                    <img class="imgPerfil" src="../userIcon.jpg" >
                <%}%>
                <img class="imgPerfil" src="<%=users.userFoto%>" alt="">
            </div>
            <div class="user_name">
                <div class="name_1">
                    <p class="users_name"><%=users.nombre%></p>
                    <span class="user_link"><%=users.email%></span>
                </div>
            </div>
        </div>
        
        <div class="info">
            <div class="bio">
                <p><%=users.bio%></p>
            </div>
            <div class="btn-follow">
                <% if(!user.linked.includes(users._id)){ %>
                    <a href="#" class="btn_follow follow_btn" data-id="<%=users.id%>" id="btn_follow">Seguir</a>
                <% } else{ %>
                    <a href="#" class="btn_follow follow_btn" data-id="<%=users.id%>" id="btn_follow">Siguiendo</a>
                <% } %>

            </div>
        </div>
        <div class="in">
            <div class="movil_follow">
                <p class="n_x623"><%=users.followers.length%></p>
                <p class="n_x542">seguidores</p>
            </div>
            <div class="movil_follow">
                <p class="n_x623" id="count-linked"><%=users.linked.length%></p>
                <p class="n_x542">siguiendo</p>
            </div>
            <div class="movil_follow">
                <p class="n_x623"><%=users.posts.length%></p>
                <p class="n_x542">posts</p>
            </div>
        </div>

        <div class="publicaciones">
            <div class="box_post postSave">
                <%for(var c = users.posts.length-1; c >=0; c--){%>
                    <%if(users.posts[c].fotoPost) {%>
                        <div class="box_publicacion">
                            <div class="img_post">
                                <div class="box_img" >
                                    <%if(users.posts[c].fotoPost.split('.',2)[1] === "mp4"){%>
                                        <video controls class="imgPost" src="<%=users.posts[c].fotoPost%>"</video>
                                    <%}%>
                                    <img class="imgPost view" data-id="<%=users.posts[c].id%>"  src="<%=users.posts[c].fotoPost%>" alt="">
                                </div>
                            </div>
                        </div>
                    <%}%>
                <%}%>    
            </div>
        </div>
    </div>

    <script src="../js/moment-with-locales.js"></script>
    <script type="module" src="../js/view_img.js"></script>
    <script type="module" src="../js/events.js"></script>
    <!-- <script src="../lightbox2-master/dist/js/lightbox-plus-jquery.min.js"></script> -->

</body>
</html>